# contributed by Conor Cary
#
# brand:                       LEGO
# model no. of remote control: 8885 Power Functions IR Remote Control
#                              Power Functions Combo Direct Mode
# devices being controlled by this remote: 8884 Power Functions IR Receiver
# 

begin remote

  name  LEGO_Combo_Direct
  bits           16
  flags SPACE_ENC
  eps            30
  aeps          100

  header        156  1014
  one           156   546
  zero          156   260
  ptrail        156
  gap          1014

      begin codes
	FLOAT_FLOAT		0x210E
	FLOAT_FORWARD		0x211F
	FLOAT_BACKWARD		0x212C
	FLOAT_BRAKE		0x213D
	FORWARD_FLOAT		0x214A
	FORWARD_FORWARD		0x215B
	FORWARD_BACKWARD	0x2168
	FORWARD_BRAKE		0x2179
	BACKWARD_FLOAT		0x2186
	BACKWARD_FORWARD	0x2197
	BACKWARD_BACKWARD	0x21A4
	BACKWARD_BRAKE		0x21B5
	BRAKE_FLOAT		0x21C2
	BRAKE_FORWARD		0x21D3
	BRAKE_BACKWARD		0x21E0
	BRAKE_BRAKE		0x21F1
      end codes

end remote
