# brand:                       LEGO
# model no. of remote control: 8885 Power Functions IR Remote Control
#                              Power Functions Combo Direct Mode
# devices being controlled by this remote: 8884 Power Functions IR Receiver
# 

begin remote

  name  LEGO_Combo_Direct_Channel_2
  bits           16
  flags SPACE_ENC
  eps            30
  aeps          100

  header        156  1014
  one           156   546
  zero          156   260
  ptrail        156
  gap          1014

      begin codes
	FORWARD_FORWARD		0x115A
	BACKWARD_BACKWARD	0x11A5
      end codes

end remote
