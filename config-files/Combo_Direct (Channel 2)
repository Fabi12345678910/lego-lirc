# brand:                       LEGO
# model no. of remote control: 8885 Power Functions IR Remote Control
#                              Power Functions Combo Direct Mode
# devices being controlled by this remote: 8884 Power Functions IR Receiver
# 

begin remote

  name  LEGO_Combo_Direct_Channel_2
  bits           16
  flags SPACE_ENC
  eps            30
  aeps          100

  header        156  1014
  one           156   546
  zero          156   260
  ptrail        156
  gap          1014

      begin codes
	FLOAT_FLOAT		0x110E
	FLOAT_FORWARD		0x111F
	FLOAT_BACKWARD		0x112C
	FLOAT_BRAKE		0x113D
	FORWARD_FLOAT		0x114A
	FORWARD_FORWARD		0x115B
	FORWARD_BACKWARD	0x1168
	FORWARD_BRAKE		0x1179
	BACKWARD_FLOAT		0x1186
	BACKWARD_FORWARD	0x1197
	BACKWARD_BACKWARD	0x11A4
	BACKWARD_BRAKE		0x11B5
	BRAKE_FLOAT		0x11C2
	BRAKE_FORWARD		0x11D3
	BRAKE_BACKWARD		0x11E0
	BRAKE_BRAKE		0x11F1
      end codes

end remote
