# brand:                       LEGO
# model no. of remote control: 8885 Power Functions IR Remote Control
#                              Power Functions Combo Direct Mode
# devices being controlled by this remote: 8884 Power Functions IR Receiver
# 

begin remote

  name  LEGO_Combo_Direct_Channel_4
  bits           16
  flags SPACE_ENC
  eps            30
  aeps          100

  header        156  1014
  one           156   546
  zero          156   260
  ptrail        156
  gap          1014

      begin codes
	FLOAT_FLOAT		0x310E
	FLOAT_FORWARD		0x311F
	FLOAT_BACKWARD		0x312C
	FLOAT_BRAKE		0x313D
	FORWARD_FLOAT		0x314A
	FORWARD_FORWARD		0x315B
	FORWARD_BACKWARD	0x3168
	FORWARD_BRAKE		0x3179
	BACKWARD_FLOAT		0x3186
	BACKWARD_FORWARD	0x3197
	BACKWARD_BACKWARD	0x31A4
	BACKWARD_BRAKE		0x31B5
	BRAKE_FLOAT		0x31C2
	BRAKE_FORWARD		0x31D3
	BRAKE_BACKWARD		0x31E0
	BRAKE_BRAKE		0x31F1
      end codes

end remote
